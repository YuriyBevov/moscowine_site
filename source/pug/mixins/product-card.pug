mixin product-card(data)
  .product-card
    if data.countryBadge
    .product-card__badge-country
      img(src=data.countryBadge alt=country width="34" height="24")

    .product-card__badge-comparing
      a(href="#")   
        svg(width="24" height="24")
          use(xlink:href="#icon-chart")
    .product-card__badge-chosen
      a(href="#")  
        svg(width="24" height="24")
          use(xlink:href="#icon-heart")

    img(src=data.img alt=data.name width="248" height="248")

    .product-card__description
      each str in data.desc
        span.cmn__text.cmn_text--small= str
    h3.cmn__text= data.name

    .product-card__price
      span.cmn__text.cmn__text--lth.product-card__price-old= data.oldPrice + ' ₽'
      span.cmn__text.product-card__price-current= data.price + ' ₽'

      .product-card__sale-badge
        span.cmn__text.cmn__text--small.cmn__text--bold.cmn__text--white= data.discount

    a(href="#").cmn__btn.cmn__cart-add-btn
      svg(width="24" height="24")
          use(xlink:href="#icon-cart")
      span.cmn__text.cmn__text--white.cmn__text--semi Выбрать

