mixin reg_slider(array, options = {})
  .swiper.reg-slider(class= options.cls ? options.cls : null )
    .swiper-wrapper
      each item in array
        .swiper-slide(style="background-image: url('" + item.imgUrl + "')")
            h3.cmn__text.cmn__text--med.cmn__text--white= item.title

    .swiper-button-next.reg-slider-button-next(class= options.nextBtnCls ? options.nextBtnCls : null )
      svg(width="9" height="18")
        use(xlink:href="#icon-arr")
    .swiper-button-prev.reg-slider-button-prev(class= options.prevBtnCls ? options.prevBtnCls : null )
      svg(width="9" height="18")
        use(xlink:href="#icon-arr")