.catalog-menu
  .catalog-menu__wrapper
    .catalog-menu__content.is-active
      .catalog-menu__header
        button(type="button" aria-label="закрыть").js-catalog-menu-closer
          svg(width="24" height="24")
            use(xlink:href="#icon-close")
        span Каталог
      
      ul.catalog-menu__categories
        li
          a(href="#" data-label="0").js-catalog-menu-switcher.cmn__text.cmn__text--med Акции
        li
          a(href="#" data-label="1").js-catalog-menu-switcher.cmn__text.cmn__text--med.active Вино     
        li
